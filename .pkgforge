name 'nettle'
org 'amylum'

licenses 'COPYINGv2'

deps(
  gmp: '6.1.2-1'
)

configure_flags(
  prefix: '/usr',
  'disable-documentation': nil,
  'with-lib-path': "#{dep(:gmp)}/usr/lib",
  'with-include-path': "#{dep(:gmp)}/usr/include"
)

harden

build do
  run './.bootstrap'
  configure
  make
  install
end

